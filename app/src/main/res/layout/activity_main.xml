<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"

    android:orientation="vertical"
    android:padding="3dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/calEditorBtnBgColor"
        android:gravity="bottom|end"
        android:padding="10dp"
        android:text=""
        android:textDirection="locale"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bgColor"

        android:orientation="horizontal"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDigit"
            android:text="7"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDigit"
            android:text="8" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDigit"
            android:text="9" />

        <Button
            android:id="@+id/buttonForwordSlash"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onOperator"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bgColor"

        android:orientation="horizontal"
        android:padding="0dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDigit"
            android:text="4" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDigit"
            android:text="5" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDigit"
            android:text="6" />

        <Button
            android:id="@+id/buttonAstric"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onOperator"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bgColor"

        android:orientation="horizontal"
        android:padding="0dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDigit"
            android:text="1" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDigit"
            android:text="2" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDigit"
            android:text="3" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onOperator"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bgColor"

        android:orientation="horizontal"
        android:padding="0dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDecimalPoint"
            android:text="." />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onDigit"
            android:text="0" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onClear"
            android:text="CLR" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onOperator"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bgColor"

        android:orientation="horizontal"
        android:padding="0dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="@dimen/zeroSize"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/btnMargin"
            android:layout_weight="1"
            android:backgroundTint="@color/calBtnBgColor"
            android:onClick="onEqual"
            android:text="=" />
    </LinearLayout>

</LinearLayout>